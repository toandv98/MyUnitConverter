<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/category_title_formatting"
        app:iconSpaceReserved="false">

        <ListPreference
            android:defaultValue="3"
            android:entries="@array/setting_decimal_places"
            android:entryValues="@array/setting_decimal_places"
            android:key="decimal_places"
            android:summary="@string/sumary_decimal_places"
            android:title="@string/preference_title_number_of_decimals"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:defaultValue="."
            android:entries="@array/setting_decimal_separator"
            android:entryValues="@array/setting_decimal_separator"
            android:key="decimal_separator"
            android:summary="@string/sumary_decimal_separator"
            android:title="@string/preference_title_decimal_separator"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false" />

        <ListPreference
            android:defaultValue=","
            android:entries="@array/setting_group_separator"
            android:entryValues="@array/setting_group_separator"
            android:key="group_separator"
            android:summary="@string/sumary_group_separator"
            android:title="@string/preference_title_group_separator"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:title="@string/preference_title_other"
        app:iconSpaceReserved="false">

        <Preference
            android:key="about_dialog"
            android:title="@string/preference_title_about"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false" />

        <PreferenceScreen
            android:summary="https://github.com/toandv98/MyUnitConverter.git"
            android:title="Source code"
            app:allowDividerAbove="true"
            app:iconSpaceReserved="false">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/toandv98/MyUnitConverter.git" />
        </PreferenceScreen>

    </PreferenceCategory>
</PreferenceScreen>