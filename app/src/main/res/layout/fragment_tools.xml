<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_with_header">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_tools_random_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:selectableItemBackground"
        app:cardCornerRadius="@dimen/card_radius_10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/description_icon_random"
                android:maxHeight="64dp"
                android:src="@drawable/ic_shuffle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:text="@string/tools_label_random_number"
                android:textSize="@dimen/text_size_medium" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:layout_margin="@dimen/margin_10dp"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:contentDescription="@string/description_icon_random"
                android:maxHeight="32dp"
                android:src="@drawable/ic_keyboard_arrow_right_blue"
                android:tint="?attr/colorAccent" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>