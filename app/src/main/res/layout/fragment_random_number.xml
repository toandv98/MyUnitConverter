<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_20dp"
        android:orientation="vertical">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_random_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="?attr/colorAccent"
            app:srcCompat="@drawable/ic_arrow_back_white" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_random_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:clickable="true"
            android:focusable="true"
            app:backgroundTint="?attr/colorAccent"
            app:srcCompat="@drawable/ic_delete_white" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_start_random"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_10dp"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_autorenew_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_20dp"
            android:text="@string/title_random_number"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="@dimen/text_size_large" />

        <TextView
            android:id="@+id/tv_label_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:text="@string/label_from"
            android:textSize="@dimen/text_size_large" />

        <EditText
            android:id="@+id/edt_random_from"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:background="?android:attr/colorBackground"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="@string/defaut_random_from"
            android:textAlignment="center"
            android:textColor="?attr/colorAccent"
            android:textSize="32sp"
            tools:ignore="Autofill,LabelFor" />

        <TextView
            android:id="@+id/tv_label_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_10dp"
            android:text="@string/label_to"
            android:textSize="@dimen/text_size_large" />

        <EditText
            android:id="@+id/edt_random_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_20dp"
            android:layout_marginEnd="@dimen/margin_20dp"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:background="?android:attr/colorBackground"
            android:ems="10"
            android:inputType="numberSigned"
            android:text="@string/default_ramdom_to"
            android:textAlignment="center"
            android:textColor="?attr/colorAccent"
            android:textSize="32sp"
            tools:ignore="Autofill,LabelFor" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_random_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin_20dp"
            app:cardBackgroundColor="?attr/colorAccent"
            app:cardCornerRadius="@dimen/margin_20dp">

            <TextView
                android:id="@+id/tv_random_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/padding_20dp"
                android:paddingEnd="@dimen/padding_20dp"
                android:text="@string/default_random_result"
                android:textAlignment="center"
                android:textColor="@color/text_color_white"
                android:textSize="100sp" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>