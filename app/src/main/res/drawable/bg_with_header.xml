<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/bottom_bg_header_"
        android:left="@dimen/left_right_bg_header_"
        android:right="@dimen/left_right_bg_header_"
        android:top="@dimen/top_bg_header_">
        <shape android:shape="oval">
            <gradient
                android:angle="90"
                android:endColor="#FFFFFF"
                android:startColor="#DDDDDD" />
        </shape>
    </item>
    <item
        android:bottom="@dimen/bottom_bg_header"
        android:left="@dimen/left_right_bg_header"
        android:right="@dimen/left_right_bg_header"
        android:top="@dimen/top_bg_header">
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
        </shape>
    </item>
</layer-list>