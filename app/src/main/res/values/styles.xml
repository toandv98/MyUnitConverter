<resources>

    <style name="AppThemeBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="AppThemeActionBarDark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarker</item>
        <item name="colorAccent">@color/colorAccentDark</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="AppThemeActionBarBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryBlue</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkBlue</item>
        <item name="colorAccent">@color/colorAccentBlue</item>
    </style>

    <style name="AppThemeActionBarGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimaryGreen</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkGreen</item>
        <item name="colorAccent">@color/colorAccentGreen</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_splash_screen</item>
    </style>

    <style name="Toolbar.Title.White" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="TextAppearanceEditTextHint" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorAccentBlue</item>
    </style>

    <style name="DialogTitle" parent="Widget.AppCompat.TextView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_color_white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>
</resources>
